<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pageBackground" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:background="#FF5722"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="212dp"
            android:layout_height="47dp"
            android:text="Welcome!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.111"
            android:textColor="#FFFFFF" android:id="@+id/textView" android:textSize="30sp"
            android:fontFamily="sans-serif-black" app:layout_constraintHorizontal_bias="0.497"
            android:textAlignment="center"/>
    <ImageView
            android:src="@drawable/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/pageBackground"
            app:layout_constraintTop_toTopOf="@+id/pageBackground" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:contentDescription="@string/splashscreen"/>
    <View
            android:layout_width="413dp"
            android:layout_height="207dp" android:id="@+id/gradient"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:background="@drawable/welcome_gradient"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/get_started"
            android:layout_width="228dp"
            android:layout_height="64dp" android:id="@+id/getStarted"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintBottom_toBottomOf="@+id/pageBackground"
            app:layout_constraintVertical_bias="0.931" android:textColor="#FF5722"
            android:background="@drawable/rounder_corner"
            android:paddingLeft="30dp" android:paddingRight="30dp" android:textAllCaps="false" android:textSize="16sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/takeawaze" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintVertical_bias="0.023"/>

</androidx.constraintlayout.widget.ConstraintLayout>
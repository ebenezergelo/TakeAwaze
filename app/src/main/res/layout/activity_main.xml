<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/welcomeScreen">
    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pageBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:background="#FF5722"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Log in as a staff member."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/staffLogIN"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section1" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.143"
            android:layout_marginBottom="16dp" android:textColor="#FFFFFF"/>
    <TextView
            android:layout_width="304dp"
            android:layout_height="111dp"
            android:text="@string/welcome_to_takeawaze"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.082"
            android:textColor="#FFFFFF" android:id="@+id/textView" android:textSize="45sp"
            android:fontFamily="sans-serif-black" app:layout_constraintHorizontal_bias="0.495"
            android:textAlignment="center"/>
    <ImageView
            android:src="@drawable/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/pageBackground"
            app:layout_constraintTop_toTopOf="@+id/pageBackground" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:contentDescription="@string/splashscreen"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.584"/>
    <View
            android:layout_width="413dp"
            android:layout_height="207dp" android:id="@+id/gradient"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:background="@drawable/welcome_gradient"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="See Orders"
            android:layout_width="268dp"
            android:layout_height="62dp" android:id="@+id/getStarted"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintBottom_toBottomOf="@+id/pageBackground"
            app:layout_constraintVertical_bias="0.935" android:textColor="#FF5722"
            android:background="@drawable/rounder_corner"
            android:paddingLeft="30dp" android:paddingRight="30dp" android:textAllCaps="false" android:textSize="16sp"/>
    <View
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/view"
            android:background="@drawable/rounder_corner" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.044" android:layout_marginBottom="664dp"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="38dp" app:srcCompat="@drawable/logo" android:id="@+id/logo"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"/>

</androidx.constraintlayout.widget.ConstraintLayout>
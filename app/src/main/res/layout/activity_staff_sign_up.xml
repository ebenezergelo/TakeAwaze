<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainScreen">

    <View
            android:layout_width="410dp"
            android:layout_height="470dp" android:id="@+id/section2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#F2F2F2" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/section1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
    <View
            android:layout_width="411dp"
            android:layout_height="309dp" android:id="@+id/section1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounder_corner"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.533"/>
    <TextView
            android:layout_width="299dp"
            android:layout_height="42dp"
            android:text="Staff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.355"
            android:textColor="#000000" android:id="@+id/textView8" android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"/>
    <ImageButton
            android:layout_width="38dp"
            android:layout_height="36dp" app:srcCompat="@drawable/ic_back" android:id="@+id/imageButton2"
            android:background="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/section1"
            app:layout_constraintHorizontal_bias="0.067" app:layout_constraintVertical_bias="0.057"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="113dp"
            android:layout_height="166dp" app:srcCompat="@drawable/logo" android:id="@+id/logo2"
            app:layout_constraintBottom_toBottomOf="@+id/section1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="@+id/section1"
            app:layout_constraintStart_toStartOf="@+id/section1" app:layout_constraintVertical_bias="0.419"
            android:contentDescription="logo"/>
    <Button
            android:text="Sign Up"
            android:layout_width="268dp"
            android:layout_height="62dp" android:id="@+id/logIn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintBottom_toBottomOf="@+id/pageBackground"
            app:layout_constraintVertical_bias="0.935" android:textColor="#FFFFFF"
            android:background="@drawable/orange_corner"
            android:paddingLeft="30dp" android:paddingRight="30dp" android:textAllCaps="false" android:textSize="16sp"
            android:layout_marginTop="600dp"/>
    <TextView
            android:text="@string/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section1" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.132" app:layout_constraintVertical_bias="0.143"/>
    <TextView
            android:text="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section1" app:layout_constraintBottom_toBottomOf="@+id/section2"
            app:layout_constraintHorizontal_bias="0.132" app:layout_constraintVertical_bias="0.405"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:text="@string/name"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section1" app:layout_constraintBottom_toBottomOf="@+id/section2"
            app:layout_constraintVertical_bias="0.204" android:autofillHints=""/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="51dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/section2" app:layout_constraintTop_toBottomOf="@+id/section1"
            app:layout_constraintVertical_bias="0.491" android:autofillHints=""/>
</androidx.constraintlayout.widget.ConstraintLayout>
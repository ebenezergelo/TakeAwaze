<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserLogin" android:id="@+id/userLogIn">

    <View
            android:layout_width="411dp"
            android:layout_height="422dp" android:id="@+id/section2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/section1"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:drawablePadding="12dp"
            android:id="@+id/userName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section7" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.108" android:textColorLink="#FF5722"
            android:textColorHighlight="#FF5722" android:drawableStart="@drawable/ic_person"
            android:layout_marginBottom="288dp"/>
    <View
            android:layout_width="411dp"
            android:layout_height="309dp" android:id="@+id/section1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounder_corner"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.009" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="299dp"
            android:layout_height="42dp"
            android:text="Customer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.355"
            android:textColor="#000000" android:id="@+id/textView5" android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"/>
    <ImageView
            android:layout_width="113dp"
            android:layout_height="166dp" app:srcCompat="@drawable/logo" android:id="@+id/logo2"
            app:layout_constraintBottom_toBottomOf="@+id/section1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="@+id/section1"
            app:layout_constraintStart_toStartOf="@+id/section1" app:layout_constraintVertical_bias="0.419"
            android:contentDescription="logo"/>
    <Button
            android:text="Log In"
            android:layout_width="268dp"
            android:layout_height="62dp" android:id="@+id/logIN"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintBottom_toBottomOf="@+id/pageBackground"
            app:layout_constraintVertical_bias="0.935" android:textColor="#FFFFFF"
            android:background="@drawable/orange_corner"
            android:paddingLeft="30dp" android:paddingRight="30dp" android:textAllCaps="false" android:textSize="16sp"
            android:layout_marginTop="600dp"
            android:onClick="usrLogIn" 
    />

    <TextView
            android:text="@string/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section1" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.132" app:layout_constraintVertical_bias="0.143"/>
    <TextView
            android:text="Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section1" app:layout_constraintBottom_toBottomOf="@+id/section2"
            app:layout_constraintHorizontal_bias="0.145" app:layout_constraintVertical_bias="0.418"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="51dp"
            android:inputType="phone"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="12dp"
            android:ems="10"
            android:id="@+id/userPhone"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/section2" android:layout_marginTop="189dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:textColorLink="#FF5722"
            android:textColorHighlight="#FF5722"/>
</androidx.constraintlayout.widget.ConstraintLayout>